<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputEditTex"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="10"
            android:hint="Enter Your Text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/repetitionEditTex"
        android:layout_below="@+id/inputEditTex"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/repetitionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter Repetition Count" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/repeatButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/textbox"
        android:layout_below="@id/repetitionEditTex"
        android:text="Repeat Text"/>

    <CheckBox
        android:id="@+id/newLineCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repeatButton"

        android:layout_marginTop="8dp"
        android:text="Include new line"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newLineCheckBox"
        android:id="@+id/linear_layout"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/copyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_below="@id/newLineCheckBox"
        android:background="@drawable/textbox"
        android:layout_marginTop="16dp"
        android:src="@drawable/copy"
        android:text="Copy"/>

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newLineCheckBox"
        android:layout_toEndOf="@id/copyButton"

        android:layout_marginTop="16dp"
        android:layout_marginStart="35dp"
        android:src="@drawable/share"
        android:text="Share"/>
        <!-- Add this button below the existing views -->
        <ImageView
            android:id="@+id/voiceInputButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shareButton"
            android:layout_marginTop="16dp"
            android:layout_marginStart="35dp"

        android:src="@drawable/input"
        />
        <ImageView
            android:id="@+id/textToSpeechButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/voiceInputButton"
            android:layout_marginTop="16dp"
            android:layout_marginStart="35dp"

            android:src="@drawable/audio"
            />




    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"
                android:paddingTop="16dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
